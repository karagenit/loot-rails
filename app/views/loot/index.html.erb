<h2>Master Item List</h2>

<table id="master" class="table">
    <tr>
        <th>Name</th>
        <th>Qty.</th>
        <th>Value</th>
        <th>Actions</th>
        <!-- Take, Sell, Delete, Edit -->
    </tr>
</table>

<div class="input-group">
    <input type="text" class="form-control" id="master-new-name" placeholder="Item Name">
    <input type="number" class="form-control" id="master-new-qty" placeholder="Quantity">
    <input type="number" class="form-control" id="master-new-value" placeholder="Value">
    <button type="button" class="btn btn-success" onclick="masterNew()">New</button>
</div>
