<div class="card">
    <div class="card-body">
        <h3 class="card-title">Master Item List</h2>

        <table id="master" class="table">
            <tr>
                <th>Name</th>
                <th>Qty.</th>
                <th>Value</th>
                <th>Actions</th>
                <!-- Take, Sell, Delete, Edit -->
            </tr>
            <tr>
                <td>
                    <input type="text" class="form-control"
                        id="master-new-name" placeholder="Item Name">
                </td>
                <td>
                    <input type="number" class="form-control"
                        id="master-new-qty" placeholder="Quantity">
                </td>
                <td>
                    <input type="number" class="form-control"
                        id="master-new-value" placeholder="Value">
                </td>
                <td>
                    <button type="button" class="btn btn-outline-success"
                        onclick="masterNew()">New</button>
                </td>
            </tr>
        </table>
   </div>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Cash Accounts</h2>

        <table id="cash" class="table">
            <tr>
                <th>Note</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
            <tr>
                <td>
                    <input type="text" class="form-control"
                        id="cash-new-note" placeholder="Note">
                </td>
                <td>
                    <input type="number" class="form-control"
                        id="cash-new-value" placeholder="Value">
                </td> <!-- TODO quantity -->
                <td>
                    <button type="button" class="btn btn-outline-success"
                        onclick="cashNew()">New</button>
                </td>
            </tr>
        </table>
   </div>
</div>
